{% for type, messages in app.flashes %}
  {% if type == 'success' %}
    {% set color = 'green' %}
  {% elseif type == 'danger' %}
    {% set color = 'red' %}
  {% endif %}

  <div id="falshSection" class="flex bg-white flex-row shadow-md border border-gray-100 rounded-lg overflow-hidden w-1/4 fixed bottom-12 right-4 z-50">
    <div class="flex w-3 bg-gradient-to-t from-{{color}}-500 to-{{color}}-400"></div>
    <div class="flex-1 p-3">
        <p class="text-gray-600 text-xs md:text-sm font-light">{{ messages|join('<br>') }}</p>
    </div>
    <div id="closeFlash" class="cursor-pointer border-l hover:bg-gray-50 border-gray-100 px-4 flex place-items-center">
        <p class="text-gray-400 text-xs">x</p>
    </div>
  </div>
{% endfor %}
