{% extends 'base.html.twig' %}

{% block title %}Modification de l'offre{% endblock %}

{% block body %}
    <section class="bg-white dark:bg-gray-900 py-8 px-4 mx-auto w-2/3 lg:py-16 flex justify-center items-center h-screen">
      <div class="mx-auto w-3/4 px-4 lg:px-12 mb-20">
        <turbo-frame id="results">
          <form method="post" action="{{ path('admin.decode') }}" class="w-full">
            <label for="default-search" class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white">Search</label>
            <div class="relative">
                <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                    <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                    </svg>
                </div>
                <input name='code' type="search" id="default-search" class="block w-full p-4 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Taper le code" value="{{ code is defined ? code : '' }}" required />
                <button type="submit" class="text-white absolute end-2.5 bottom-2.5 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Valider</button>
            </div>
          </form>

          {% if user is defined and user is not null %}
            <p id="user-id">User trouvé: {{ user.username }}</p>
          {% endif %}

          {% if payment is defined and payment is not null %}
            <p id="payment-date">Offre trouvée: {{ payment.createdAt|date('Y-m-d H:i:s') }}</p>
          {% endif %}

          {% if offerTitle is defined and offerTitle is not null %}
            <p id="offer-title">Offre trouvée: {{ offerTitle }}</p>
          {% endif %}
        </turbo-frame>
      </div>
    </section>
{% endblock %}
