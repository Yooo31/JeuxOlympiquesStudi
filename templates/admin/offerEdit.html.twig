{% extends 'base.html.twig' %}

{% block title %}Modification de l'offre{% endblock %}

{% block body %}
    <section class="md:py-16 bg-gray-50 dark:bg-gray-900 p-3 sm:p-5 flex justify-center items-center h-screen">
        <div class="mx-auto w-1/2 px-4 lg:px-12 mb-20">
            <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Modification de {{ offer.title }}</h2>
            {{ form_start(form, {'method': 'POST'}) }}
                <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
                    <div class="sm:col-span-2">
                        <label for="{{ form.title.vars.id }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Nom de l'offre</label>
                        {{ form_widget(form.title, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500' } }) }}
                    </div>
                    <div class="sm:col-span-2">
                        <label for="{{ form.subtitle.vars.id }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Sous-titre de l'offre</label>
                        {{ form_widget(form.subtitle, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500' } }) }}
                    </div>
                    <div class="w-full">
                        <label for="{{ form.pricing.vars.id }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Prix</label>
                        {{ form_widget(form.pricing, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500' } }) }}
                    </div>
                    <div class="w-full">
                        <label for="{{ form.capacity.vars.id }}" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Capacit√©</label>
                        {{ form_widget(form.capacity, { 'attr': { 'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500' } }) }}
                    </div>
                </div>
                <a href="{{ path('admin.index') }}" class="'inline-flex items-center px-5 py-2.5 mt-4 sm:mt-6 text-sm font-medium text-center text-white bg-red-700 rounded-lg focus:ring-4 focus:ring-red-200 dark:focus:ring-red-900 hover:bg-red-800">Annuler</a>
                {{ form_widget(form.save, { 'attr': { 'class': 'inline-flex items-center px-5 py-2.5 mt-4 sm:mt-6 text-sm font-medium text-center text-white bg-primary-700 rounded-lg focus:ring-4 focus:ring-primary-200 dark:focus:ring-primary-900 hover:bg-primary-800' } }) }}
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
